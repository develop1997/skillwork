{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "./@types"
    ],
    "module": "ES2022",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}